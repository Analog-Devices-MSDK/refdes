<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/node_layout"
    android:padding="2dp">

    <ImageView
        android:layout_width="30dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/node_icon"
        app:layout_constraintBottom_toBottomOf="@id/node_icon"
        android:layout_marginStart="5dp"
        android:id="@+id/node_arrow_icon"
        android:src="@drawable/ic_arrow_right"
        />


    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toEndOf="@id/node_arrow_icon"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:id="@+id/node_icon"
        android:src="@drawable/ic_folder_full"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="@id/node_icon"
        app:layout_constraintBottom_toBottomOf="@id/node_icon"
        app:layout_constraintStart_toEndOf="@id/node_icon"
        tools:text="Folder"
        android:gravity="center"
        android:layout_marginStart="5dp"
        android:id="@+id/node_text_view"
        />

</androidx.constraintlayout.widget.ConstraintLayout>