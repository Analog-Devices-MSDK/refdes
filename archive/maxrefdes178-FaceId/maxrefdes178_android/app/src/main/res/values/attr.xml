<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="MenuItemView">
        <attr name="image" format="reference" />
        <attr name="text" format="string" localization="suggested" />
    </declare-styleable>

    <declare-styleable name="HorizontalStepperView">
        <attr name="firstStepNumber" format="integer" />
        <attr name="secondStepNumber" format="integer" />
        <attr name="thirdStepNumber" format="integer" />
        <attr name="firstStepDescription" format="string" localization="suggested" />
        <attr name="secondStepDescription" format="string" localization="suggested" />
        <attr name="thirdStepDescription" format="string" localization="suggested" />
        <attr name="stepperProgress" format="integer" />
        <attr name="enableProgress" format="boolean" />
        <attr name="enableBackButton" format="boolean" />
        <attr name="enableNextButton" format="boolean" />
        <attr name="backButtonText" format="reference|string" localization="suggested" />
        <attr name="nextButtonText" format="reference|string" localization="suggested" />
        <attr name="currentStep" format="enum">
            <enum name="first" value="0" />
            <enum name="second" value="1" />
            <enum name="third" value="2" />
        </attr>
    </declare-styleable>
</resources>